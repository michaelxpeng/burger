<h1 class="text-center">Eat Da Burger!</h1>

<div class="col-xs-12">
	<div class="col-xs-6">
		{{#each burger}} {{#unless this.devoured}}
		<div class="container">
			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="false">
				<button type="submit" class="btn btn-warning">Devour It!</button>
			</form>
			<p>{{this.id}}. {{this.burger_name}}</p>
		</div>
		{{/unless}}{{/each}}
	</div>

	<div class="col-xs-6">
		{{#each burger}} {{#if this.devoured}}
		<div class="container" id="eaten">
			<p> {{this.id}}. {{this.burger_name}}
			</p>
		</div>
		{{/if}} {{/each}}
	</div>

</div>

<div class="row">
	<div class="col-xs-3"></div>
	<div class="col-xs-6">
		<form action="/" method="POST">
			<div class="form-group text-center">
				<label for="value">Your Burger</label>
				<textarea type="text" class="form-control" name="value" placeholder="Enter a new burger."></textarea>
			</div>
			<button type="submit" class="btn btn-primary" id="submit">Submit</button>
		</form>
	</div>
	<div class="col-xs-3"></div>
</div>